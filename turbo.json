{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "type": {
      "dependsOn": ["^type"],
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": ["dist/*.d.ts", "tsconfig.tsbuildinfo"]
    },
    "build": {
      "dependsOn": ["^type", "^build"],
      "inputs": ["src/**", "rollup.config.mjs", "tsconfig.json"],
      "outputs": ["dist/*.js"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["type"],
      "inputs": ["src/**", "rollup.config.mjs", "tsconfig.json"],
      "outputs": ["dist/**", "tsconfig.tsbuildinfo"]
    }
  }
}
